<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="750.0" prefWidth="950.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxapppracticasprofesionales.controlador.FXMLEvaluarOrganizacionVinculadaController">
    <children>
        <Label layoutX="25.0" layoutY="25.0" text="Formato de Evaluación de la Organización Vinculada">
            <font><Font name="System Bold" size="20.0" /></font>
        </Label>
        
        <GridPane layoutX="25.0" layoutY="70.0" hgap="10" vgap="5">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
            </columnConstraints>
            <!-- Filas para los datos autocompletados -->
            <Label text="Nombre del alumno:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <Label fx:id="lbNombreAlumno" text="..." GridPane.rowIndex="0" GridPane.columnIndex="1" />
            <Label text="Matrícula:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <Label fx:id="lbMatricula" text="..." GridPane.rowIndex="1" GridPane.columnIndex="1" />
            <Label text="Organización vinculada:" GridPane.rowIndex="0" GridPane.columnIndex="2" />
            <Label fx:id="lbOrganizacion" text="..." GridPane.rowIndex="0" GridPane.columnIndex="3" />
            <Label text="Nombre del proyecto:" GridPane.rowIndex="1" GridPane.columnIndex="2" />
            <Label fx:id="lbProyecto" text="..." GridPane.rowIndex="1" GridPane.columnIndex="3" />
        </GridPane>
        
        <TableView fx:id="tvAfirmaciones" layoutX="25.0" layoutY="150.0" prefHeight="450.0" prefWidth="900.0">
            <columns>
                <TableColumn fx:id="colCategoria" prefWidth="50.0" text="N°" />
                <TableColumn fx:id="colAfirmacion" prefWidth="450.0" text="Afirmación" />
                <TableColumn fx:id="colNunca" prefWidth="80.0" text="Nunca (1)" />
                <TableColumn fx:id="colPocasVeces" prefWidth="80.0" text="Pocas (2)" />
                <TableColumn fx:id="colAlgunasVeces" prefWidth="80.0" text="Algunas (3)" />
                <TableColumn fx:id="colMuchasVeces" prefWidth="80.0" text="Muchas (4)" />
                <TableColumn fx:id="colSiempre" prefWidth="80.0" text="Siempre (5)" />
            </columns>
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
        </TableView>

        <Label layoutX="25.0" layoutY="610.0" text="OBSERVACIONES Y SUGERENCIAS">
            <font><Font name="System Bold" size="12.0" /></font>
        </Label>
        <TextArea fx:id="taObservaciones" layoutX="25.0" layoutY="630.0" prefHeight="80.0" prefWidth="898.0" wrapText="true" />

        <Button layoutX="845.0" layoutY="715.0" onAction="#clicCancelar" text="Cancelar" />
        <Button layoutX="765.0" layoutY="715.0" onAction="#clicAceptar" style="-fx-background-color: #146cd0;" text="Aceptar" textFill="WHITE" />
    </children>
</AnchorPane>
